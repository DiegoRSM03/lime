{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "DB_PASSWORD",
    "DB_HOST",
    "DB_PORT",
    "DB_USERNAME",
    "DB_NAME",
    "OPENAI_API_KEY",
    "SWAGGER_PROD_API_URL",
    "API_PORT",
    "NODE_ENV",
    "AWS_REGION",
    "AWS_ACCESS_KEY",
    "AWS_SECRET_ACCESS_KEY",
    "AWS_S3_BUCKET_NAME",
    "FRONTEND_URL"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {}
  }
}
